<Window x:Class="ismagilov16_17.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ismagilov16_17"
        mc:Ignorable="d"
        Title="41 размер Исмагилова" Height="450" Width="800" MinWidth="800" MinHeight="400" Icon="Resources/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>

        <Frame Grid.Row="1" Name="MainFrame" ContentRendered="MainFrame_ContentRendered"/>

        <Frame Grid.Row="0" Background="#FFCC99"></Frame>
        <Frame Grid.Row="2" Background="#FFCC99"></Frame>
        
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="41 размер" FontSize="30"></TextBlock>
        <Image Source="Resources/logo.png" HorizontalAlignment="Left" VerticalAlignment="Center"></Image>

        <Button Name="Back" Content="Назад" FontSize="20" Width="100" Margin="10" Click="Back_Click" HorizontalAlignment="Right" VerticalAlignment="Center"></Button>
    </Grid>
</Window>
