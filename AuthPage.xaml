<Page x:Class="ismagilov16_17.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ismagilov16_17"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация" FontFamily="Comic Sans MS">

    <Grid>

        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Логин" Margin="0 0 10 0"></TextBlock>
                <TextBox Name="Login" Width="100"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 10 0 0" HorizontalAlignment="Center">
                <TextBlock Text="Пароль " Margin="0 0 2.5 0"></TextBlock>
                <TextBox Name="Password" Width="100"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 30 0 0">
                <Button Name="SignGhost" Click="SignGhost_Click"  Content="Войти как гость" Width="100" Height="20" Margin="0 0 100 0"></Button>
                <Button Name="Sign" Click="Sign_Click" Content="Войти" Width="100" Height="20"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
